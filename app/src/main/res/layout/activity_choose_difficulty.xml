<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseDifficulty"
    android:background="@drawable/bg_difficulty">


    <ImageView
        android:id="@+id/difficulty"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.016"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.97"
        app:srcCompat="@drawable/diffthree"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/difficulty2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:contentDescription="TODO"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.016"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.583"
        app:srcCompat="@drawable/difftwo"
        tools:ignore="ContentDescription,HardcodedText,MissingConstraints,ImageContrastCheck" />

    <ImageView
        android:id="@+id/difficulty3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.016"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.18"
        app:srcCompat="@drawable/diffone"
        tools:ignore="ContentDescription,MissingConstraints,ImageContrastCheck" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="195dp"
        android:layout_height="54dp"
        android:background="@drawable/bg_corner"
        android:backgroundTint="#a75112"
        android:fontFamily="@font/adlam_display"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/choose_difficulty"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.027"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/tenSec"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_corner"
        android:backgroundTint="#a75112"
        android:fontFamily="@font/adlam_display"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="@string/highScore"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.881" />

    <TextView
        android:id="@+id/thirtySec"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_corner"
        android:backgroundTint="#a75112"
        android:fontFamily="@font/adlam_display"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="@string/highScore"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.568" />

    <TextView
        android:id="@+id/fortySec"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_corner"
        android:backgroundTint="#a75112"
        android:fontFamily="@font/adlam_display"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="@string/highScore"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.227" />

    <ImageView
        android:id="@+id/chooseDiffBackBtn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/bg_corner"
        android:backgroundTint="#a75112"
        android:contentDescription="@string/todo___________________________________________________"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.012"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.033"
        app:srcCompat="@drawable/baseline_arrow_back_24"
        tools:ignore="ImageContrastCheck" />

    <ImageView
        android:id="@+id/chooseDiffHomeBtn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/bg_corner"
        android:backgroundTint="#a75112"
        android:contentDescription="@string/_________"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.984"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.033"
        app:srcCompat="@drawable/baseline_home_24" />

    <ImageView
        android:id="@+id/music"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/bg_corner"
        android:backgroundTint="#a75112"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.815"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.033"
        app:srcCompat="@drawable/baseline_music_note_24" />


</androidx.constraintlayout.widget.ConstraintLayout>