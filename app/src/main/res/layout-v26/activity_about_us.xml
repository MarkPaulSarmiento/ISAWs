<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/bg_difficulty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".about_us">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/todo"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="54dp"
                    android:layout_height="56dp"
                    android:contentDescription="@string/back_btn"
                    android:src="@drawable/baseline_arrow_back_24"
                    android:backgroundTint="#a75112"
                    android:background="@drawable/bg_corner"
                    android:layout_margin="10dp" />

                <TextView
                    android:layout_width="190dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="35dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/bg_corner"
                    android:backgroundTint="#a75112"
                    android:contentDescription="@string/about"
                    android:fontFamily="@font/adlam_display"
                    android:gravity="center"
                    android:text="@string/about"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    tools:ignore="TextSizeCheck" />

                <ImageView
                    android:layout_width="54dp"
                    android:layout_height="56dp"
                    android:src="@drawable/baseline_music_note_24"
                    android:layout_margin="10dp"
                    android:backgroundTint="#a75112"
                    android:background="@drawable/bg_corner"
                    android:contentDescription="@string/about"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/bg_corner"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/adlam_display"
                android:hyphenationFrequency="full"
                android:justificationMode="inter_word"
                android:padding="10dp"
                android:text="@string/description"
                android:textColor="@color/black"
                tools:ignore="UnusedAttribute" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/the_developers"
                android:gravity="center"
                android:fontFamily="@font/adlam_display"
                android:textColor="@color/white"
                android:background="@drawable/bg_corner"
                android:backgroundTint="#a75112"
                android:textSize="20sp"
                android:padding="20dp"
                android:layout_margin="10dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/about"
                android:src="@drawable/devone"
                tools:ignore="ImageContrastCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/adlam_display"
                android:text="@string/justineDev"
                android:textColor="@color/black"
                android:background="@drawable/bg_corner"
                android:backgroundTint="@color/white"
                android:hyphenationFrequency="full"
                android:justificationMode="inter_word"
                tools:ignore="UnusedAttribute" 
                android:padding="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>
            
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/devtwo"
                android:contentDescription="@string/about"
                tools:ignore="ImageContrastCheck"/>
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/adlam_display"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"
                android:background="@drawable/bg_corner"
                android:hyphenationFrequency="full"
                android:justificationMode="inter_word"/>





        </LinearLayout>

    </ScrollView>

</LinearLayout>